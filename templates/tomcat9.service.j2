#
# Managed by Ansible
#

#
# Systemd unit file for Apache Tomcat
#

[Unit]
Description=Apache Tomcat 9 Web Application Server
Documentation=https://tomcat.apache.org/tomcat-9.0-doc/index.html
After=network.target
RequiresMountsFor=/var/log/tomcat9 /var/lib/tomcat9

[Service]

# Configuration
Environment="JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64"
Environment="JAVA_OPTS=${JAVA_OPTS} -Djava.awt.headless=true -Dfile.encoding=UTF-8"
Environment="CATALINA_HOME=/usr/share/tomcat9"
Environment="CATALINA_BASE=/var/lib/tomcat9"
Environment="CATALINA_TMPDIR=/tmp"
Environment="CATALINA_OPTS=-Xms512m -Xmx1024m -XX:NewSize=256m -XX:MaxNewSize=256m -XX:PermSize=256m -XX:MaxPermSize=256m -Dcantaloupe.config={{ cantaloupe_symlink }}/cantaloupe.properties -Dfits.home={{ fits_install_symlink }} -Dfcrepo.home={{ fcrepo_home_dir }} -Dfcrepo.modeshape.configuration=file://{{ fcrepo_home_dir }}/configs/repository.json -Dfcrepo.activemq.configuration=file://{{ fcrepo_home_dir }}/configs/activemq.xml -Dfcrepo.spring.configuration=file://{{ fcrepo_home_dir }}/configs/fcrepo-config.xml -Dfcrepo.external.content.allowed={{ fcrepo_home_dir }}/configs/allowed-external-content.txt -Dorg.apache.tomcat.util.buf.UDecoder.ALLOW_ENCODED_SLASH=true"

# Lifecycle
Type=simple
ExecStartPre=+/usr/libexec/tomcat9/tomcat-update-policy.sh
ExecStart=/bin/sh /usr/libexec/tomcat9/tomcat-start.sh
SuccessExitStatus=143
Restart=on-abort

# Logging
SyslogIdentifier=tomcat9

# Security
User=tomcat
Group=tomcat
PrivateTmp=yes
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=true
CacheDirectory=tomcat9
CacheDirectoryMode=750
ProtectSystem=strict
ReadWritePaths=/etc/tomcat9/Catalina/
ReadWritePaths=/var/lib/tomcat9/webapps/
ReadWritePaths=/var/log/tomcat9/
ReadWritePaths={{ cantaloupe_log_path }}/
ReadWritePaths={{ fcrepo_home_dir }}/
ReadWritePaths={{ fcrepo_syn_folder }}/
ReadWritePaths={{ cantaloupe_symlink }}/
ReadWritePaths={{ fits_install_symlink }}/
ReadWritePaths={{ cantaloupe_FilesystemCache_pathname }}/
ReadWritePaths={{ fcrepo_data_dir }}/

[Install]
WantedBy=multi-user.target
